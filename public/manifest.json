{
  "manifest_version": 3,
  "name": "ChatGPT Chrome Extension",
  "version": "0.1",
  "description": "The Chrome extension that allows users to highlight text on any webpage and get the summary for each highlight generated by the ChatGPT.",
  "author": "Igor Naumov",
  "short_name": "chatgpt chrome extension",
  "action": {
    "default_popup": "index.html",
    "default_title": "Chat GPT Chrome extension"
  },
  "permissions": [
    "activeTab",
    "background"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["static/js/content.js"]
    }
  ],
  "background": {
    "service_worker": "static/js/background.js"
  }
}
  